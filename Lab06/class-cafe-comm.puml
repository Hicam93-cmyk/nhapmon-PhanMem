@startuml
class ContentManager {
    + managerId : String
    + name : String
    + create() : ArticleForm
}

class ArticleForm {
    + title : String
    + contentBody : String
    + submit() : boolean
}

class ArticleController {
    + saveArticle(form:ArticleForm) : boolean
    + review(article:Article)
}

class ArticleRepository {
    + save(article:Article) : boolean
    + findById(id:int) : Article
}

class Article {
    + articleId : int
    + title : String
    + contentBody : String
    + status : String // Draft, Pending, Published
}

class Campaign {
    + campaignId : int
    + name : String
    + type : String
}

class AnalyticsReport {
    + reportId : int
    + metrics : Map<String, Double>
    + generateSEOReport()
}

